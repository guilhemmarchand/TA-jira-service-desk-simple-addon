                    "field": "account",
                    "search": "| rest splunk_server=local /servicesNS/nobody/TA-jira-service-desk-simple-addon/ta_service_desk_simple_addon_account | dedup title",
                    "valueField": "title",
                    "labelField": "title",
                    "help": "Select the account from the dropdown",
                    "required": true
                },
                {
                    "type": "text",
                    "label": "Ticket uuid",
                    "help": "",
                    "field": "ticket_uuid",
                    "required": false
                },
                {
                    "type": "text",
                    "label": "Ticket data",
                    "help": "",
                    "field": "ticket_data",
                    "required": false
                },
                {
                    "type": "text",
                    "label": "Ticket status",
                    "help": "",
                    "field": "ticket_status",
                    "required": false
                },
                {
                    "type": "text",
                    "label": "Ticket number of attempts",
                    "help": "",
                    "field": "ticket_no_attempts",
                    "required": false
                },
                {
                    "type": "text",
                    "label": "Ticket max number of attempts",
                    "help": "",
                    "field": "ticket_max_attempts",
                    "required": false
                },
                {
                    "type": "text",
                    "label": "Ticket creation time",
                    "help": "",
                    "field": "ticket_ctime",
                    "required": false
                },
                {
                    "type": "text",
                    "label": "Ticket modification time",
                    "help": "",
                    "field": "ticket_mtime",
                    "required": false
                }
            ]
        }
    ],
